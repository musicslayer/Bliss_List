<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_delete_item_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/confirm_delete_item_dialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Delete Item?" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirm_delete_item_dialog_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_delete_item_dialog_toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_delete_item_dialog_confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableLeftCompat="@drawable/baseline_check_24"
        android:text="Confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_delete_item_dialog_textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_delete_item_dialog_cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:drawableLeftCompat="@drawable/baseline_cancel_24"
        android:text="Cancel"
        app:layout_constraintStart_toEndOf="@+id/confirm_delete_item_dialog_confirmButton"
        app:layout_constraintTop_toBottomOf="@+id/confirm_delete_item_dialog_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>