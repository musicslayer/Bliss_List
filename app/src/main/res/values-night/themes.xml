<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlissList" parent="Theme.MaterialComponents">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/night_background</item>
        <item name="colorPrimaryVariant">@color/night_feature</item>
        <item name="colorPrimaryDark">@color/night_background</item>
        <item name="colorOnPrimary">@color/night_background</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/night_feature</item>
        <item name="colorSecondaryVariant">@color/night_feature</item>
        <item name="colorOnSecondary">@color/night_background</item>

        <!-- View Themes -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>

        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>

        <!-- Other -->
        <item name="singleLine">true</item>
        <item name="subtitleTextColor">@color/night_feature</item>
        <item name="titleTextColor">@color/night_feature</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fadeScrollbars">false</item>
        <item name="android:freezesText">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/night_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/night_feature</item>
        <item name="android:textColorSecondary">@color/night_feature</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/night_background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ActionBarTheme.Title</item>
    </style>

    <style name="ActionBarTheme.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/night_feature</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
        <item name="strokeColor">@color/night_feature</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/border_round</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="21">0.09</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColorPrimary">@color/night_feature</item>
        <item name="android:textColorSecondary">@color/night_feature</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonTheme</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>

        <item name="android:textViewStyle">@style/TextViewTheme</item>
    </style>

    <style name="ImageButtonTheme" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
        <item name="strokeColor">@color/night_feature</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/border_round</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="21">0.09</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="MaterialButtonTheme" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
        <item name="strokeColor">@color/night_feature</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint" tools:targetApi="21">@color/night_feature</item>
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
    </style>

    <style name="TextViewTheme" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/night_feature</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/night_feature</item>
    </style>
</resources>